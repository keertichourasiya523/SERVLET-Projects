<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>ADD</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.ADD_Servlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>SUB</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.SUB_Servlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MUL</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.MUL_Servlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DIV</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.DIV_Servlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MOD</servlet-name>
		<servlet-class>com.jsp.servlet.calculator.MOD_Servlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ADD</servlet-name>
		<url-pattern>/add-number</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SUB</servlet-name>
		<url-pattern>/sub-number</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MUL</servlet-name>
		<url-pattern>/mul-number</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DIV</servlet-name>
		<url-pattern>/div-number</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MOD</servlet-name>
		<url-pattern>/mod-number</url-pattern>
	</servlet-mapping>

</web-app>
